{
  "name": "retroflow-server",
  "version": "1.0.0",
  "description": "Backend for RetroFlow",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx prisma generate && nodemon --watch 'src/**/*.ts' --watch '../shared/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "npx prisma generate && tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.2",
    "@types/uuid": "^9.0.4",
    "@types/ioredis": "^5.0.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
